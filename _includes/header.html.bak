<header class="header-area">
  <div class="header-navbar-top py-1 bg-light  d-none d-lg-block">
    <div class="container{% if page.home == 6 %}-fluid{% endif %}">
      <div class="header-newsticker-menu">
        <div class="newsticker">
          <div class="newsticker-btn">Latest News</div>
          <div class="newsticker-list">
            <ul class="list-inline">
              {% assign posts = site.posts | sort: 'date' | reverse %}
              {% for post in posts limit:5 %}
                <li>
                  <a href="{{post.url | relative_url}}">{{post.title}}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class="newsticker-social">
          <ul class="list-inline">

            <li class="list-inline-item"><a class="bg-primary" href="{{site.facebook | relative_url}}"><i
                  class="fab fa-facebook-f"></i></a>
            </li>

            <li class="list-inline-item"><a class="bg-info" href="{{site.twitter | relative_url}}"><i
                  class="fab fa-twitter"></i></a>
            </li>

            <li class="list-inline-item"><a class="bg-danger" href="{{site.instagram | relative_url}}"><i
                  class="fab fa-instagram"></i></a>
            </li>

          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="header-navbar-middle d-none d-lg-block">
    <div class="container{% if page.home == 6 %}-fluid{% endif %}">
      <div class="navbar-brand-wrapper py-3 d-flex justify-content-between align-items-center">
        <a class="navbar-brand" href="{{'/' | relative_url}}">
          <img class="lazyload" src="{{site.logo | relative_url}}" alt="{{site.title}}">
        </a>
      </div>
    </div>
  </div>
  <div class="header-navbar-bottom pt-2 pt-lg-0 border-top border-light">
    <div class="container{% if page.home == 6 %}-fluid{% endif %} themeix-menu-selector">

      <nav class="navbar navbar-expand-lg">

        <div class="collapse navbar-collapse" id="main_nav">
          {% include navigation.html %}
        </div>
        
        <div class="search-modal" data-bs-toggle="modal" data-bs-target="#search-modal">
          <a class="nav-link" href="#"> <i class="fas fa-search"></i> </a>
        </div>
      </nav>

      {% include modal-search.html %}
    </div>
  </div>
</header>